<!DOCTYPE html>
<html>
<head>
    <script src="https://smtpjs.com/v3/smtp.js"></script>
    <script src="jquery-1.10.2.min.js"></script>
    <title>Bus Booking System</title>
    <link rel="stylesheet" type="text/css" href="/css/home.css">
    <script src="/css/index.js"></script>
</head>
<body>
  
     <div class="result">
         <h1>School Extra Activites System</h1>
            {{#if msg}}
            <p class="{{msg_type}}">{{msg}}</p>
            {{/if}}
            </div>
        <div class="booking">
        <div>
            {{#each jocking}}
            <p>Reamaing Slot for Jocking : {{this.count}}</p>
            {{/each}}
        </div>
        <div>
            {{#each walking}}
            <p>Reamaing Slot for Walking : {{this.count}}</p>
            {{/each}}
        </div>
        <div>
            {{#each cycling}}
            <p>Reamaing Slot for Cycling : {{this.count}}</p>
            {{/each}}
        </div>
        <div>
            {{#each yoga}}
            <p>Reamaing Slot for Yoga : {{this.count}}</p>
            {{/each}}
        </div>
        <div>
            {{#each dance}}
            <p>Reamaing Slot for Dance : {{this.count}}</p>
            {{/each}}
        </div>
        <div>
            {{#each swimming}}
            <p>Reamaing Slot for Swimming : {{this.count}}</p>
            {{/each}}
        </div>
        </div>
    <div class="container">
            <form class="inputbox" action="/payment" method="post">
            <div class="input1">
                <input type="text" id="inputField1" name="inputField1" title="Name of the student" required onclick="valid()">
                <span id="message1">Student Name</span>
            </div>
            <div class="input1">
                <input type="text" id="inputField2" name="inputField2" title="Class and section of the student" required onclick="valid()">
                <span id="message2">Class-Section</span>
            </div>
            <div class="input1">
                <select name="myselect" id="inputField3" name="inputField3" title="Parcipating activity of the student" required onclick="valid()">
                    <option disabled selected value>Choose Activity</option>
                    <option value="Cycling">Cycling</option>
                    <option value="Jocking">Jocking</option>
                    <option value="Walking">Walking</option>
                    <option value="Yoga">Yoga</option>
                    <option value="Dance">Dance</option>
                    <option value="Swimming">Swimming</option>
                </select>
            </div>
            <div class="input1">
                <input type="text" onfocus="(this.type='date')" onblur="if(!this.value)this.type='text'"  id="inputField4" name="inputField4" title="Date of participation" placeholder="" required onclick="valid()">
                <span id="message4">Date</span>
            </div>
            <div class="input1">
                <button>Create</button>
            </div>
            </form>
    </div>

</body>
</html>
